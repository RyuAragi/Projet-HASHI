<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="background" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.demojeumenu.Menu.MenuTailleGrille">
    <fx:include source="Logo.fxml" />
    <VBox alignment="BASELINE_CENTER">
        <Button styleClass="titre" text="TAILLE DE GRILLE"  />
    </VBox>

    <VBox alignment="CENTER">
        <Button  onAction="#jouerGrille15x15" id="Facile-6" styleClass="custom-buttonGrille"  text="Jouer cette grille 11 x 8" />
        <Button  onAction="#jouerGrille15x15" id="Facile-7" styleClass="custom-buttonGrille"  text="Jouer cette grille 11 x 8" />
        <Button  onAction="#jouerGrille15x15" id="Facile-8" styleClass="custom-buttonGrille"  text="Jouer cette grille 11 x 8" />
        <Button  onAction="#jouerGrille15x15" id="Facile-9" styleClass="custom-buttonGrille"  text="Jouer cette grille 11 x 8" />
        <Button  onAction="#jouerGrille15x15" id="Facile-10" styleClass="custom-buttonGrille"  text="Jouer cette grille 16 x 12" />
        <!-- Utilisation d'un HBox pour organiser les boutons "Retour" et "Suivant" -->
        <HBox alignment="CENTER">
            <Button onAction="#retour" prefHeight="25.0" prefWidth="66.0" styleClass="custom-buttonR" text="Retour" />
        </HBox>

    </VBox>
    <Button onAction="#param" styleClass="param" BorderPane.alignment="BOTTOM_RIGHT" StackPane.alignment="BOTTOM_RIGHT" />
</StackPane>
