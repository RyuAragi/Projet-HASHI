<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="background" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.demo.Menu.MenuTailleGrille">
    <fx:include source="Logo.fxml" />
    <VBox alignment="BASELINE_CENTER">
        <Button styleClass="titre" text="TAILLE DE GRILLE"  />
    </VBox>

    <VBox alignment="CENTER">

        <Button  onAction="#jouerGrille15x15" id="Facile-1" styleClass="custom-buttonGrille"  text="Jouer cette grille 7 x 5" />
        <Button  onAction="#jouerGrille15x15" id="Facile-2" styleClass="custom-buttonGrille"  text="Jouer cette grille 15x15" />
        <Button  onAction="#jouerGrille15x15" id="Facile-3" styleClass="custom-buttonGrille"  text="Jouer cette grille 15x15" />
        <Button  onAction="#jouerGrille15x15" id="Facile-4" styleClass="custom-buttonGrille"  text="Jouer cette grille 15x15" />
        <Button  onAction="#jouerGrille15x15" id="Facile-5" styleClass="custom-buttonGrille"  text="Jouer cette grille 15x15" />

        <!-- Utilisation d'un HBox pour organiser les boutons "Retour" et "Suivant" -->
        <HBox alignment="CENTER">
            <Button onAction="#retour" prefHeight="25.0" prefWidth="66.0" styleClass="custom-buttonR" text="Retour" />
            <Button onAction="#btnS" prefHeight="25.0" prefWidth="66.0" styleClass="custom-buttonS" text="Suivant" />
        </HBox>
    </VBox>


</StackPane>
