<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane onMouseClicked="#background" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demojeumenu.Menu.MenuPrincipalController">
    <fx:include source="Logo.fxml" />


    <VBox alignment="BASELINE_CENTER">
        <Button styleClass="titre" text="MENU" />
    </VBox>


    <BorderPane>
        <center>
            <VBox alignment="CENTER">
                <HBox alignment="CENTER">
                    <TextField fx:id="zoneTexte" styleClass="custom-button" />
                </HBox>

                <Button fx:id="didacticiel" onAction="#buttonAction" styleClass="custom-button" text="DITACTICIEL" />
                <Button fx:id="jouer" onAction="#buttonAction" styleClass="custom-button" text="JOUER" />
                <Button fx:id="quitter" onAction="#buttonAction" styleClass="custom-button" text="QUITTER" />
            </VBox>
        </center>
      <bottom>
           <Button onAction="#param" styleClass="param" BorderPane.alignment="BOTTOM_RIGHT" />
      </bottom>
    </BorderPane>

</StackPane>
