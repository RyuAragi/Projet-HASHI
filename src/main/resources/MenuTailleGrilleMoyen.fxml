<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="background" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.demojeumenu.Menu.MenuTailleGrille">
    <fx:include source="Logo.fxml" />
    <VBox alignment="BASELINE_CENTER">
        <Button styleClass="titre" text="TAILLE DE GRILLE"  />
    </VBox>

    <VBox alignment="CENTER">
        <Button  onAction="#jouerGrille15x15" id="Moyen-1" styleClass="custom-buttonGrille"  text="Jouer cette grille 11 x 8" />
        <Button  onAction="#jouerGrille15x15" id="Moyen-2" styleClass="custom-buttonGrille"  text="Jouer cette grille 11 x 8" />
        <Button  onAction="#jouerGrille15x15" id="Moyen-3" styleClass="custom-buttonGrille"  text="Jouer cette grille 13 x 9" />
        <Button  onAction="#jouerGrille15x15" id="Moyen-4" styleClass="custom-buttonGrille"  text="Jouer cette grille 13 x 9" />
        <Button  onAction="#jouerGrille15x15" id="Moyen-5" styleClass="custom-buttonGrille"  text="Jouer cette grille 14 x 10" />
        <!-- Utilisation d'un HBox pour organiser les boutons "Retour" et "Suivant" -->
        <HBox alignment="CENTER">
            <Button onAction="#retour" prefHeight="25.0" prefWidth="66.0" styleClass="custom-buttonR" text="Retour" />
            <Button onAction="#btnS" prefHeight="25.0" prefWidth="66.0" styleClass="custom-buttonS" text="Suivant" />
        </HBox>

    </VBox>
    <Button onAction="#param" styleClass="param2" BorderPane.alignment="BOTTOM_RIGHT" StackPane.alignment="BOTTOM_RIGHT" />
</StackPane>
